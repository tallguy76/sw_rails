<% content_for :title do  %>
  Create an Item
<% end %>

<%= simple_form_for @item, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :image_url %>
  <%= f.input :x_coord %>
  <%= f.input :y_coord %>
  <%= f.hidden_field :room_id, value: @room.id %>


  <%= f.button :submit %>
<% end %>
