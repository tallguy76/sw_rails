<% content_for :title do  %>
  Edit Connections
<% end %>


<%= simple_form_for @connection, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :ending_room_id, collection: Room.all.
    map{|r| r.id}.select{ |r| r != @room.id}, value:@connection.ending_room_id %>
  <%= f.hidden_field :starting_room_id, value: @room.id %>
  <%= f.input :connection_name, value: @connection.connection_name %>
  <%= f.button :submit %>
<% end %>
